<%- model_class = Client -%>
  <div class="tagbar">
    <h3 class="aleft">Update Existing clients</h3>
    <div id="button" class="aright">
      <%= link_to t('.new', :default => t("helpers.links.Add new client")), new_admin_path, :class => 'btn btn-primary' %>
    </div>
    <div class="clear"></div>
  </div>
  <div id="clients-list">
    <table class="table">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:company_name) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:member_since) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% Client.all.each do |client| %>
          <tr>
            <td><%= client.company_name %></td>
            <td><%= client.description %></td>
            <td><%= client.created_at.strftime("%d-%b-%Y").to_s %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_admin_path(client), :class => 'btn btn-info' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          admin_path(client),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="clear"></div> 

  <div class="tagbar down">
    <h3 class="aleft">Show Existing codes</h3>
    <div id="button1" class="aright">
      <%= link_to t('.new', :default => t("helpers.links.Add invitation code")), code_admins_path, :class => 'btn btn-primary' %>
    </div>
    <div class="clear"></div>
  </div>
  <div id="codes-list">
    <table class="table">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:code) %></th>
          <th><%= model_class.human_attribute_name(:status) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% InviteCode.all.each do |code| %>
          <tr>
            <td><%= code.code %></td>
            <%if code.consumed == false %>
              <td> Valid </td>
            <%else%>
              <td> Invalid </td>
            <%end%>    
            <td>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          delete_code_admin_path(code),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div id="system-info">
    <div class="page-header tagbar">
      <h3>Dashboard</h3>
    </div>
    <div class="infobox">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th><%= model_class.human_attribute_name(:Cients_onboard) %></th>
            <td><%= Client.all.count.to_s %></td>
          </tr> 
          <tr> 
            <th><%= model_class.human_attribute_name(:Projects_entered) %></th>
            <td><%= Project.all.count.to_s %></td>  
          </tr>
          <tr>  
            <th><%= model_class.human_attribute_name(:total_pictures) %></th>
            <td><%= (Client.where("logo != ''").count + Image.all.count).to_s %></td> 
          </tr>  
        </tbody>
      </table>
      <div class="divider"></div>
      <table class="table table-striped">
        <tbody>
          <tr>
            <th><%= model_class.human_attribute_name(:Ambquad_hosting_size) %></th>
            <td style"border:2px solid black;"><%= "TBA" %></td>
          </tr> 
          <tr> 
            <th><%= model_class.human_attribute_name(:avg_hosting_size_per_client) %></th>
            <td><%= "TBA" %></td>  
          </tr>
          <tr>  
            <th><%= model_class.human_attribute_name(:total_hosting_size) %></th>
            <td><%= "TBA" %></td> 
          </tr>  
          <tr>  
            <th><%= model_class.human_attribute_name(:hosting_size_remaining) %></th>
            <td><%= "TBA" %></td> 
          </tr>  
        </tbody>
      </table>
    </div>  
  </div>
<style>
#codes-list{
  min-height: 300px;
  max-height: 500px;
  overflow: auto;
  border: 1px solid black;
}

.down{
  margin-top: 15px;
}

#button1
{
  margin-top: 7px;
}
</style>