<div class="client">
  <div id="button">
<%= link_to t('.new', :default => t("helpers.links.Add new client")),
            new_admin_path,
            :class => 'btn btn-primary' %>
</div>
<%- model_class = Client -%>
<div class="page-header">
  <h3><u>Update Existing clients</u></h3>
</div>
<div id="scroll">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:member_since) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.company_name %></td>
        <td><%= client.description %></td>
        <td><%= client.created_at.strftime("%d-%b-%Y").to_s %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_path(client), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_path(client),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div id="dashboard">
<div class="page-header">
  <h3><u>Dashboard</u></h3>
</div>
<div id="borders">  
  <table class="table table-striped">
  <tbody>
    <tr>
      <th><%= model_class.human_attribute_name(:Cients_onboard) %></th>
      <td><%= Client.all.count.to_s %></td>
    </tr> 
    <tr> 
      <th><%= model_class.human_attribute_name(:Projects_eneterd) %></th>
      <td><%= Client.all.count.to_s %></td>  
    </tr>
    <tr>  
      <th><%= model_class.human_attribute_name(:total_pictures) %></th>
      <td><%= Client.all.count.to_s %></td> 
    </tr>  
  </tbody>
</table>
</div>
<div id="borders">  
  <table class="table table-striped">
  <tbody>
    <tr>
      <th><%= model_class.human_attribute_name(:Ambquad_hosting_size) %></th>
      <td style"border:2px solid black;"><%= Client.all.count.to_s+" MB" %></td>
    </tr> 
    <tr> 
      <th><%= model_class.human_attribute_name(:avg_hosting_size_per_client) %></th>
      <td><%= Client.all.count.to_s+" MB" %></td>  
    </tr>
    <tr>  
      <th><%= model_class.human_attribute_name(:total_hosting_size) %></th>
      <td><%= Client.all.count.to_s+" MB" %></td> 
    </tr>  
    <tr>  
      <th><%= model_class.human_attribute_name(:hosting_size_remaining) %></th>
      <td><%= Client.all.count.to_s+" GB" %></td> 
    </tr>  
  </tbody>
</table>
</div>
</div>
</div>

<div class="clear">
  </div>