<div class="container">
  <%= form_for @admin, :url => reset_password_admin_path(@admin), :html => { :class => "form-signin"} do |f| %>
  <h2 class="form-signin-heading">Reset Password</h2>
  <%= f.email_field :email, :class => "form-control space", :placeholder => "Email address", :required => "true", :autofocus =>"true"%>
  <%= f.password_field :password, :class => "form-control", :placeholder => "Password", :required => "true"%>
  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation", :required => "true"%>
  <%= f.submit "Reset Password", :class => "btn btn-lg btn-primary btn-block" %></div>
<% end %>
</div> 

