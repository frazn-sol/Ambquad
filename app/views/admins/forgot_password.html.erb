<script>
  $( document ).ready(function() {
    $("#admin_email").val("")
  });

  var validator = new FormValidator('edit_admin_1', [{
    name: 'admin[email]',    
    rules: 'required'
  }, {
    name: 'admin[password]',
    rules: 'required'
  }, {
    name: 'admin[password_confirmation]',
    rules: 'required'
  }], function(errors, event) {
    if (errors.length > 0) {
    var temp;
    $("input:text").each(function(){
        $(this).css("border","none");      
        $(this).removeClass("field_error");
    })
    for (var i=0; i<errors.length; i++){
      temp = errors[i].id;
      $("#" + temp).css("border","1px solid red");
    }
    }  
  });
</script>
