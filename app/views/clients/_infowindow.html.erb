<div id="infoimage">
	<%if project.images.first.present? %>
		<%= image_tag project.images.first.image, :height =>"100px", :width =>"100px"%>
	<%else%>
		<%= image_tag "default.jpg", :height =>"100px", :width =>"100px"%>
	<%end%>
</div>
<div id="infotext">
	<b><%= project.project_name %></b></br>
	<%= project.city %>, <%= project.country %></br>
	View details <a href="javascript:void(0)" id="viewdetails">Click Here</a>  
</div>
