<div id="infoimage">
	<%if project.images.first.present? %>
		<%= image_tag project.images.first.image, :height =>"100px", :width =>"100px"%>
	<%else%>
		<%= image_tag "default.jpg", :height =>"100px", :width =>"100px"%>
	<%end%>
</div>
<div id="infotext">
<b><%= project.project_name %></b></br>
<%= project.city %>, <%= project.country %></br>
View Details <a href="#details" role="button" data-toggle="modal">Click here </a>
</div>

<div id="details" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<%= render :partial => 'details' %>
</div>