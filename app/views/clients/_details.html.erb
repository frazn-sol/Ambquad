<%if @client.projects.present? %>
	<% @client.projects.each do |project| %>
		<div id="project_details_<%= project.id %>" class="popup" style="display:none;">
		  <div class="popup_close"><img src="/assets/close.png"/ width="32"></div>
			<div>
				<div class="text_container">
					<h2> <%= project.project_name %> </h2>
				</div>	
				<%if project.images.present? %>
					<div id="infobox_left_<%=project.id%>" class="infobox_left">
						<%= image_tag project.images.first.image.url(:thumb), :class => "project_medium"%>
					</div>
					<div id="infobox_right_<%=project.id%>" class="infobox_right">
					<% project.images.each do |p| %>
						<%= link_to image_tag(p.image.url(:thumb), :class => "project_thumbs"), p.image.url(:large) %>
					<% end %>
					</div>
				<%end%>	
				<div class="clear"></div>
				<div class="text_container">
				<% if(project.project_status.present?) %>	
					<b>Project Status: </b> <%= project.project_status %> </br>
				<% end %>	
				<% if(project.start_date.present?) %>	
					<b>Start Date: </b> <%= project.start_date %> </br>
				<% end %>	
				<% if(project.completion_date.present?) %>	
					<b>Completion Date or Projected: </b> <%= project.completion_date %> </br>
				<% end %>	
				<% if(project.project_value.present?) %>	
					<b>Project Value: </b> <%= project.project_value %> </br>
				<% end %>	
				<b>Location: </b> <%= project.address1 %>, <%= project.city %>, <%= project.state %>, <%= project.country %></br>
				<% if(project.client_name.present?) %>	
					<b>Client: </b> <%= project.client_name %> </br>
				<% end %>	
				<% if(project.description.present?) %>	
					<b>Project Description: </b> <%= project.description %>
				<% end %>	
				</div>	
			</div>
		</div>
	<% end %>
<% end %>

<style>
	.infobox_left{
		float:left;
		width:49%;
		height:210px;
	}
	.infobox_right{
		float: right;
		width:50%;
		height:210px;
		overflow:auto;
	}
	.project_thumbs{
		width: 110px;
		height: 110px;
		margin-bottom: 3px;
		margin-right: 1px;
	}
	.project_medium{
		width: 95%;
		height: 100%;
		margin-bottom: 3px;
		margin-right: 1px;
	}
	a:hover{
		background:transparent;
	}
	.infobox_left img{
		max-height: 200px;
		max-width: 200px;		
	}
	h3{
		margin-bottom: 5px;
	}
	div.text_container{
		margin-top: 10px;
	}
	h2{
		border: none;
	}
</style>